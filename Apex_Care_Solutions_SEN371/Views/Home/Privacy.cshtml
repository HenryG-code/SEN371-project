<!--This is the Contract Management Page-->﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contract Management</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
        }

        .container {
            max-width: 480px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 10%;
        }

        /* Updated header to be centered and bigger */
        header {
            text-align: center;
            margin-bottom: 20px;
        }

            header h2 {
                font-size: 28px;
                font-weight: bold;
            }

        .client-info {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

            .client-info h1 {
                font-size: 22px;
            }

        .available-services {
            margin-bottom: 20px;
        }

        .service-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
            border-bottom: 1px solid #ddd;
            cursor: pointer;
        }

            .service-item:hover {
                background-color: #f0f0f0;
            }

        .service-details {
            margin-bottom: 20px;
            display: none;
        }

            .service-details h3 {
                margin-top: 10px;
            }

        .service-feature {
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin-top: 5px;
            background-color: #f9f9f9;
        }

        .performance-metrics {
            margin-bottom: 20px;
        }

        .metrics {
            display: flex;
            justify-content: space-between;
        }

        .metric-card {
            flex: 1;
            background-color: #f0f0f0;
            padding: 10px;
            border-radius: 10px;
            text-align: center;
            margin-right: 10px;
        }

            .metric-card:last-child {
                margin-right: 0;
            }

        .buttons-section {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-top: 20px;
        }

            .buttons-section button {
                padding: 10px;
                font-size: 16px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

        .primary-btn {
            background-color: #000;
            color: #fff;
        }

        .secondary-btn {
            background-color: #fff;
            color: #000;
            border: 1px solid #000;
        }

    </style>
</head>
<body>

    <div class="container">

        <!-- Updated Header Section - Centered and Larger -->
        <header>
            <h2>Contract Management</h2>
        </header>

        <!-- Client Info -->
        <div class="client-info">
            <h1>John Doe</h1>
        </div>

        <!-- Contract Info -->
        <div class="contract-info">
            <h1>Service A</h1>
        </div>

        <!-- Available Services Section -->
        <div class="available-services">
            <h3>Available Services</h3>
            <div class="service-item" onclick="showDetails('serviceA', 'Service A - Premium Package')">
                <span>Service A</span>
                <span>Premium Package</span>
            </div>
            <div class="service-item" onclick="showDetails('serviceB', 'Service B - Standard Package')">
                <span>Service B</span>
                <span>Standard Package</span>
            </div>
        </div>

        <!-- Service Details Section -->
        <div class="service-details" id="service-details">
            <h3>Service Features</h3>
            <div id="serviceA" class="service-feature" style="display: none;">
                <h4>Service A</h4>
                <p>High-performance service with advanced features including:</p>
                <ul>
                    <li>Feature 1: Detailed analytics</li>
                    <li>Feature 2: 24/7 support</li>
                    <li>Feature 3: Customizable options</li>
                    <li>Fault Urgency: <strong>High</strong></li>
                    <li>Maintenance Response: <strong>Urgent</strong> response within 1 hour</li>
                </ul>
            </div>
            <div id="serviceB" class="service-feature" style="display: none;">
                <h4>Service B</h4>
                <p>Reliable service with standard features including:</p>
                <ul>
                    <li>Feature 1: Basic analytics</li>
                    <li>Feature 2: Email support</li>
                    <li>Fault Urgency: <strong>Medium</strong></li>
                    <li>Maintenance Response: <strong>Standard</strong> response within 4 hours</li>
                </ul>
            </div>
        </div>

        <!-- Performance Metrics Section -->
        <div class="performance-metrics">
            <h3>Performance Metrics</h3>
            <div class="metrics">
                <div class="metric-card" id="metric-response-time">
                    <p>Response Time</p>
                    <h2>98%</h2>
                    <p>+2%</p>
                </div>
                <div class="metric-card" id="metric-uptime">
                    <p>Uptime</p>
                    <h2>99.5%</h2>
                    <p>-0.5%</p>
                </div>
            </div>
        </div>

        <!-- Buttons Section -->
        <div class="buttons-section">
            <button class="primary-btn" id="renew-btn" onclick="renewContract()">Renew Contract</button>
        </div>

    </div>

    <script>
        let selectedService = '';

        function showDetails(service, serviceName) {
            // Hide all service features
            const features = document.querySelectorAll('.service-feature');
            features.forEach(feature => {
                feature.style.display = 'none';
            });

            // Show the selected service details
            document.getElementById(service).style.display = 'block';

            // Show the service details section
            document.getElementById('service-details').style.display = 'block';

            // Update performance metrics based on selected service
            updatePerformanceMetrics(service);

            // Store selected service
            selectedService = serviceName;
            // Update the renew button text
            document.getElementById('renew-btn').innerText = 'Renew ' + selectedService;
        }

        function updatePerformanceMetrics(service) {
            const responseTime = document.getElementById('metric-response-time');
            const uptime = document.getElementById('metric-uptime');

            // Checks to see if the selected service is 'serviceA'
            if (service === 'serviceA') {

                // Update the response time for Service A
                responseTime.querySelector('h2').innerText = '99%';
                responseTime.querySelector('p:last-child').innerText = '-1%';

                // Update the uptime for Service A
                uptime.querySelector('h2').innerText = '99.8%';
                uptime.querySelector('p:last-child').innerText = '+0.3%';

                // Check if the selected service is 'serviceB'
            } else if (service === 'serviceB') {
                // Update the response time for Service B
                responseTime.querySelector('h2').innerText = '96%';
                responseTime.querySelector('p:last-child').innerText = '-2%';

                // Update the uptime for Service B
                uptime.querySelector('h2').innerText = '98.5%';
                uptime.querySelector('p:last-child').innerText = '-0.5%';
            }
        }

        function renewContract() {
            alert('You have chosen to renew: ' + selectedService);
        }
    </script>
</body>
</html>