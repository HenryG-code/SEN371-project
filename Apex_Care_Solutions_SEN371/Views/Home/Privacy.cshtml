<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contract Management</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
        }

        .container {
            max-width: 480px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            header h1 {
                font-size: 20px;
            }

            header .back-btn {
                font-size: 18px;
                text-decoration: none;
                color: #333;
            }

        .client-info {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

            .client-info img {
                border-radius: 50%;
                width: 50px;
                height: 50px;
                margin-right: 10px;
            }


        .available-services, .service-details {
            margin-bottom: 20px;
        }

        .service-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
            border-bottom: 1px solid #ddd;
        }

        .performance-metrics {
            margin-bottom: 20px;
        }

        .metrics {
            display: flex;
            justify-content: space-between;
        }

        .metric-card {
            flex: 1;
            background-color: #f0f0f0;
            padding: 10px;
            border-radius: 10px;
            text-align: center;
            margin-right: 10px;
        }

            .metric-card:last-child {
                margin-right: 0;
            }

        .buttons-section {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-top: 20px;
        }

            .buttons-section button {
                padding: 10px;
                font-size: 16px;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

        .primary-btn {
            background-color: #000;
            color: #fff;
        }

        .secondary-btn {
            background-color: #fff;
            color: #000;
            border: 1px solid #000;
        }

    </style>
</head>
<body>

    <div class="container">

        <!-- Header Section -->
        <header>
            <a href="#" class="back-btn">&#x2190;</a>
            <h2>Contract Management</h2>
        </header>

        <!-- Client Info -->
        <div class="client-info">
            <h1>Client Name Here</h1>
        </div>

        <!-- Contract Info -->
        <div class="contract-info">
            <h1>Current Contract Name Here</h1>
        </div>


        <!-- Available Services Section -->
        <div class="available-services">
            <h3>Available Services</h3>
            <div class="service-item">
                <span>Service A</span>
                <span>Premium Package</span>
            </div>
            <div class="service-item">
                <span>Service B</span>
                <span>Standard Package</span>
            </div>
        </div>

        <!-- Service Details Section -->
        <div class="service-details">
            <h3>Service Details</h3>
            <div class="service-item">
                <span>Service A</span>
                <p>High-performance service with advanced features</p>
            </div>
            <div class="service-item">
                <span>Service B</span>
                <p>Reliable service with standard features</p>
            </div>
        </div>

        <!-- Performance Metrics Section -->
        <div class="performance-metrics">
            <h3>Performance Metrics</h3>
            <div class="metrics">
                <div class="metric-card">
                    <p>Response Time</p>
                    <h2>98%</h2>
                    <p>+2%</p>
                </div>
                <div class="metric-card">
                    <p>Uptime</p>
                    <h2>99.5%</h2>
                    <p>-0.5%</p>
                </div>
            </div>
        </div>

        <!-- Buttons Section -->
        <div class="buttons-section">
            <button class="primary-btn">Renew Contract</button>
        </div>

    </div>

</body>
</html>

