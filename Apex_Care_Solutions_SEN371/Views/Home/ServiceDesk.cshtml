<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Call and Fault Report Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        .container {
            width: 100%;
            max-width: 400px;
            margin: 0 auto;
            background-color: white;
            padding: 20px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 18px;
            text-align: center;
            margin-bottom: 20px;
        }

        .client-info, .feedback-section {
            margin-bottom: 20px;
        }

            .client-info div, .reported-issues div, .feedback-section div {
                margin-bottom: 10px;
            }

        .btn {
            display: block;
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            text-align: center;
            background-color: #fff;
            border: 1px solid #000;
            cursor: pointer;
        }

        .btn-black {
            background-color: #000;
            color: #fff;
        }

        .feedback-section {
            background-color: #f9f9f9;
            padding: 15px;
            border-radius: 5px;
        }

        .nav {
            position: fixed;
            bottom: 0;
            width: 100%;
            display: flex;
            justify-content: space-around;
            background-color: #fff;
            padding: 10px 0;
            border-top: 1px solid #ccc;
        }

        .nav-item {
            text-align: center;
        }

            .nav-item img {
                width: 24px;
                height: 24px;
            }

        .star-rating {
            color: gold;
            font-size: 16px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Call and Fault Report Management</h1>

        <!-- Client Data and Service History Section -->
        <div class="client-info">
            <div><strong>Client Name:</strong> John Doe</div>
            <div><strong>Last Service Date:</strong> 25th Aug, 2021</div>
        </div>

        <!-- Reported Issues Section -->
        <div class="reported-issues">
            <div><strong>Reported Issues</strong></div>
            <div style="border: 1px solid #ccc; padding: 15px;">
                <div style="margin-bottom: 10px;">Status: <span style="background-color: #e0e0e0; padding: 3px;">In Progress</span></div>
                <div style="background-color: #f5f5f5; height: 150px; display: flex; align-items: center; justify-content: center;">
                    <span>Image Placeholder</span>
                </div>
                <div>Faulty Connection</div>
                <div>Priority: <strong>High</strong></div>
            </div>
        </div>

        <!-- Action Buttons -->
        <button class="btn" onclick="changePriority()">Change Priority</button>
        <button class="btn" onclick="logInteraction()">Log Interaction</button>
        <button class="btn btn-black" onclick="assignWorkRequest()">Assign Work Request</button>

        <!-- Client Feedback Section -->
        <div class="feedback-section">
            <div><strong>Client Feedback</strong></div>
            <div style="display: flex; align-items: center;">
                <div>
                    <img src="https://via.placeholder.com/40" alt="client-profile" style="border-radius: 50%; margin-right: 10px;">
                </div>
                <div>
                    <strong>Jane Smith</strong><br>
                    <span class="star-rating">★★★★★</span><br>
                    <small>Great service, resolved the issue quickly</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom Navigation -->
    <div class="nav">
        <div class="nav-item">
            <img src="https://via.placeholder.com/24" alt="home-icon">
            <div>Home</div>
        </div>
        <div class="nav-item">
            <img src="https://via.placeholder.com/24" alt="contact-icon">
            <div>Contact</div>
        </div>
    </div>

    <script>
        function changePriority() {
            alert('Change Priority button clicked');

        }

        function logInteraction() {
            alert('Log Interaction button clicked');

        }

        function assignWorkRequest() {
            alert('Assign Work Request button clicked');

        }
    </script>

</body>
</html>

