<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Technician Portal</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        .container {
            width: 100%;
            max-width: 500px;
            margin: 0 auto;
            background-color: white;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
            padding-bottom: 70px;
            margin-bottom: 100px;
        }

        h1 {
            text-align: center;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .job-section, .status-section, .sms-section {
            margin-bottom: 20px;
        }

            .job-section div, .status-section div, .sms-section div {
                margin-bottom: 10px;
            }

        .btn {
            display: block;
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            text-align: center;
            background-color: #fff;
            border: 1px solid #000;
            cursor: pointer;
        }

        .btn-black {
            background-color: #000;
            color: #fff;
        }

        .nav {
            position: fixed;
            bottom: 0;
            width: 100%;
            display: flex;
            justify-content: space-around;
            background-color: #fff;
            padding: 10px 0;
            border-top: 1px solid #ccc;
        }

        .nav-item {
            text-align: center;
        }

            .nav-item img {
                width: 24px;
                height: 24px;
            }

        .status-btn {
            padding: 10px;
            margin: 5px;
            width: 45%;
            text-align: center;
            border: 1px solid #000;
            cursor: pointer;
        }

        .status-section {
            display: inline-block;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        #job-status {
            font-weight: bold;
            color: green;
        }

        .feedback-section {
            background-color: #f9f9f9;
            border-radius: 5px;
        }

        .star-rating {
            color: gold;
        }


    </style>
</head>
<body>

    <div class="container">
        <h1>Technician Portal</h1>


        <div class="job-section">
            <div><strong>Current Job:</strong> Job #123</div>
            <div><strong>Client:</strong> John Doe</div>
            <div><strong>Address:</strong> 123 Main St, City</div>
            <div><strong>Issue:</strong> Faulty Connection</div>
        </div>


        <div class="status-section">
            <div><strong>Update Job Status:</strong></div>
            <button class="status-btn" onclick="updateStatus('On Route')">On Route</button>
            <button class="status-btn" onclick="updateStatus('In Progress')">In Progress</button>
            <button class="status-btn" onclick="updateStatus('Done')">Done</button>
            <button class="status-btn" onclick="updateStatus('Reschedule')">Reschedule</button>
        </div>

        <!-- Display the Updated Status -->
        <div id="job-status">Current Status: Waiting for Update</div>

        <div class="sms-section">
            <div><strong>Send an SMS Notification</strong></div>
            <textarea id="sms-message" rows="4" placeholder="Enter your message here..." style="width: 100%; padding: 10px;"></textarea>
            <button class="btn" onclick="sendSMS()">Send SMS to Phone</button>
        </div>
    </div>

    <!-- Client Feedback Section -->
    <div class="feedback-section">
        <div><strong>Live Client Feedback</strong></div>
        <div style="display: flex; align-items: center;">
            <div>
                <img src="https://via.placeholder.com/40" alt="client-profile" style="border-radius: 50%; margin-right: 10px;">
            </div>
            <div>
                <strong>Jane Smith</strong><br>
                <span class="star-rating">★★★★★</span><br>
                <small>Great service, resolved the issue quickly</small>
            </div>
        </div>
    </div>


    <script>
        // Function to update job status on the page
        function updateStatus(status) {
            document.getElementById('job-status').innerText = 'Current Status: ' + status;
            alert('Job status updated to: ' + status);
            // Add API logic to update status in the backend
        }

        // Placeholder: Send SMS function
        function sendSMS() {
            const message = document.getElementById('sms-message').value;
            if (message) {
                alert('SMS sent: ' + message);
                // Add API logic to send SMS here
            } else {
                alert('Please enter a message to send.');
            }
        }
    </script>

</body>
</html>