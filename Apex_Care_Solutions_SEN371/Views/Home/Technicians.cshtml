        .status-btn {
            padding: 10px;
            margin: 5px;
            width: 45%;
            text-align: center;
            border: 1px solid #000;
            cursor: pointer;
        }

        .status-section {
            display: inline-block;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        #job-status {
            font-weight: bold;
            color: green;
        }

        .feedback-section {
            background-color: #f9f9f9;
            border-radius: 5px;
        }

        .star-rating {
