<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 0;
        }

        .header {
            background-color: #fff;
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid #ccc;
        }

        .container {
            max-width: 600px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .button-ConStatus {
            display: flex;
            justify-content: space-around;
            margin-bottom: 20px;
        }

            .button-ConStatus button {
                padding: 10px 20px;
                background-color: #e9ecef;
                border: none;
                cursor: pointer;
                border-radius: 5px;
            }

        .relationship-manager {
            display: flex;
            justify-content: space-around;
            margin-bottom: 20px;
        }

        .service-details {
            margin-top: 20px;
            background-color: #f1f1f1;
            padding: 20px;
            border-radius: 10px;
        }

            .service-details p {
                margin: 10px 0;
                font-size: 16px;
            }

        .form-container {
            text-align: center;
            margin-top: 20px;
        }

        .form-field {
            margin-bottom: 15px;
        }

            .form-field label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
            }

            .form-field input {
                padding: 10px;
                width: 80%;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

        .update-btn {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .update-btn:hover {
                background-color: #0056b3;
            }

        /* Space at the bottom to prevent footer overlap */
        .container::after {
            content: '';
            display: block;
            height: 50px; /* Adjust height to prevent footer overlap */
        }

        .footer {
            text-align: center;
            padding: 20px;
            background-color: #f1f1f1;
            position: relative;
            bottom: 0;
            width: 100%;
        }

        .client-details {
            margin-bottom: 20px;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 10px;
            text-align: center;
        }

            .client-details img {
                width: 80px;
                height: 80px;
            }

            .client-details p {
                margin: 10px 0;
                font-size: 16px;
            }

            .client-details .detail-label {
                font-weight: bold;
            }
    </style>
</head>
<body>

    <div class="header">
        <h1>Client Management</h1>
    </div>

    <!-- Main Container -->
    <div class="container">

        <div class="client-details">
            <h2>Client Details</h2>
            <div>
                <p class="detail-label">Name: <span id="display-client-name">John Doe</span></p>
            </div>
            <div>
                <p class="detail-label">Email: <span id="display-client-email">john.doe@example.com</span></p>
            </div>
            <div>
                <p class="detail-label">Phone: <span id="display-client-phone">+1234567890</span></p>
            </div>
            <div>
                <p class="detail-label">Address: <span id="display-client-address">123 Main St, City, Country</span></p>
            </div>
        </div>

        <div class="button-ConStatus">
            <!-- Contract Status with Image -->
            <button onclick="showContractStatus()">
                <img src="/images/rocket.jpg" style="width:120px; height:120px;"><br>
                Contract Status
            </button>

            <!-- Service A Button with Image -->
            <button onclick="showServiceDetails('A')">
                <img src="/images/service.jpg" style="width:120px; height:120px;"><br>
                Service A
            </button>

            <!-- Service B Button with Image -->
            <button onclick="showServiceDetails('B')">
                <img src="/images/OIP.jpg" style="width:120px; height:120px;"><br>
                Service B
            </button>
        </div>

        <!-- Service Details Display -->
        <div id="service-details" class="service-details" style="display: none;">
            <h2>Service Details</h2>
            <p id="service-description"></p>
        </div>

        <!-- Form to update client details -->
        <div class="form-container">
            <h2>Update Client Details</h2>
            <div class="form-field">
                <label for="client-name">Client Name</label>
                <input type="text" id="client-name" placeholder="Enter client's name">
            </div>
            <div class="form-field">
                <label for="client-email">Client Email</label>
                <input type="email" id="client-email" placeholder="Enter client's email">
            </div>
            <div class="form-field">
                <label for="client-phone">Client Phone</label>
                <input type="tel" id="client-phone" placeholder="Enter client's phone number">
            </div>
            <div class="form-field">
                <label for="client-address">Client Address</label>
                <input type="text" id="client-address" placeholder="Enter client's address">
            </div>

            <!-- Update details button -->
            <button class="update-btn" onclick="updateDetails()">Update Details</button>
        </div>

    </div>

    <!-- Footer Section -->
    <div class="footer">
        <p></p>
    </div>

    <script>
        function showContractStatus() {
            const contractStatus = true; // Assume the contract status is stored as a boolean

            if (contractStatus) {
                alert("Client has an active contract.");
            } else {
                alert("Client does not have a contract.");
            }
        }

        function showServiceDetails(service) {
            const serviceDetails = {
                'A': `Service A<br />
                            High-performance service with advanced features including:<br />
                            Feature 1: Detailed analytics<br />
                            Feature 2: 24/7 support<br />
                            Feature 3: Customizable options<br />
                            Fault Urgency: <strong>High</strong><br />
                            Maintenance Response: <strong>Urgent</strong> response within 1 hour`,
                'B': `Service B<br />
                            Reliable service with standard features including:<br />
                            Feature 1: Basic analytics<br />
                            Feature 2: Email support<br />
                            Fault Urgency: <strong>Medium</strong><br />
                            Maintenance Response: <strong>Standard</strong> response within 4 hours`
            };

            document.getElementById('service-description').innerHTML = serviceDetails[service];
            document.getElementById('service-details').style.display = 'block';
        }

        function updateDetails() {
            const name = document.getElementById('client-name').value;
            const email = document.getElementById('client-email').value;
            const phone = document.getElementById('client-phone').value;
            const address = document.getElementById('client-address').value;

            // Update the display section with the new client details
            document.getElementById('display-client-name').innerText = name || 'John Doe';
            document.getElementById('display-client-email').innerText = email || 'john.doe@example.com';
            document.getElementById('display-client-phone').innerText = phone || '+1234567890';
            document.getElementById('display-client-address').innerText = address || '123 Main St, City, Country';

            alert(`Client details updated:\nName: ${name}\nEmail: ${email}\nPhone: ${phone}\nAddress: ${address}`);
        }
    </script>

</body>
</html>

